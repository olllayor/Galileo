{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Galileo",
  "version": "0.1.0",
  "identifier": "com.galileo.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Galileo",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": false,
        "titleBarStyle": "Visible",
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {}
}
